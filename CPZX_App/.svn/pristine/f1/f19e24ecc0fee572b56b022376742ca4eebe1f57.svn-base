			RelativeLayout R = (RelativeLayout) TV.getParent();
			View button = (View) R.getChildAt(2);//.findViewWithTag("com.dtedu.mobile.evation.bean.Catalog@b5234688");
			solo.clickOnView(button);
			solo.sleep(3000);
			checkMessage("答题卡");
		}
