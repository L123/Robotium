	//年级、学科选择
	public void choose(Solo solo,String grade,String subject){
		if(grade!="" || subject!=""){
			solo.clickOnView(solo.getView("home_top_iv_right"));//点击选择图标{
			if(grade!=null){
				solo.clickOnText(grade);
			}
			if(subject!=null){
				solo.clickOnText(subject);
			}
			solo.clickOnView(solo.getView("filter_sureBT"));
			solo.sleep(3000);
		}
	}
		
