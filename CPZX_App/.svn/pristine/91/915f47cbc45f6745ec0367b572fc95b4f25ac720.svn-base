	//从试题库收藏试题,返回首页
	public void collectTestQuestions(Solo solo,int n){
		for(int i=0;i<n;i++){
			if(solo.waitForText("加入收藏")==false){
				solo.scrollToSide(solo.RIGHT);
			}
			else{				
				solo.clickOnText("加入收藏");	
				checkMessage(solo,"取消收藏");
				if(i<n-1){   //最后一道试题添加后不需要翻页
					solo.scrollToSide(solo.RIGHT);
					solo.sleep(1000);
				}					
			}			
		}
		solo.goBack();
		solo.sleep(1000);
	}
	
	//从试题库对试题进行取消收藏,返回首页
	public void cancleTestQuestions(Solo solo,int n){
		for(int i=0;i<n;i++){
			if(solo.waitForText("取消收藏")==false){
				solo.scrollToSide(solo.RIGHT);
			}
			else{				
				solo.clickOnText("取消收藏");	
				checkMessage(solo,"加入收藏");
				if(i<n-1){ 
					//最后一道试题添加后不需要翻页
					solo.scrollToSide(solo.RIGHT);
					solo.sleep(1000);
				}					
			}			
		}
		solo.goBack();
		solo.sleep(1000);
	}
				
	//向测试库添加试题并生成试卷
	public void addQuestions(Solo solo,int n){
		for(int i=0;i<n;i++){
			if(solo.waitForText("加入测试库")==false){
				solo.scrollToSide(solo.RIGHT);
			}
			else{
				int m=1;
				do{						
					m++;
					solo.clickOnText("加入测试库");	
					if(solo.waitForText("不能添加到测试库")==true){
						m=0;
						solo.scrollToSide(solo.RIGHT);
						solo.sleep(500);
						//solo.clickOnText("加入测试库");	
					}
				}while(m==0);
					
				if(i<n-1){   //最后一道试题添加后不需要翻页
					solo.scrollToSide(solo.RIGHT);
					solo.sleep(1000);
				}					
			}			
		}
		solo.clickOnView(solo.getView("autoexerciselist_right_lib_rl"));//点击测试库
		solo.sleep(3000);			
		solo.clickOnView(solo.getView("layout_exerciselib_right_lib_rl"));//点击开始做题进入答题页面
		solo.sleep(3000);
	}
		
